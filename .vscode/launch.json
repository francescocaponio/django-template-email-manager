  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": ["runserver", "0.0.0.0:8010"],
      "django": true
    },
    {
      "name": "Create Local Package",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/setup.py",
      "cwd": "${workspaceFolder}",
      "args": ["sdist"]
    },
    {
        "name": "Build PyPI Package",
        "type": "python",
        "request": "launch",
        "module": "build"
    },
    {
      "name": "Upload Package on PyPI",
      "type": "python",
      "request": "launch",
      "module": "twine",
      "cwd": "${workspaceFolder}",
      "args": [
            "upload",
            "--repository",
            "pypi",
            "--config-file",
            ".pypirc",
            "dist/*",
      ]
    }
  ]
}
